{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "resources": [
    {
      "type": "Microsoft.Authorization/roleDefinitions",
      "apiVersion": "2018-01-01-preview",
      "name": "[guid(subscription().id, 'RecoveryVaultContributor')]",
      "properties": {
        "roleName": "Recovery Vault Contributor",
        "description": "Can manage Recovery Vaults",
        "permissions": [
          {
            "actions": [
              "Microsoft.RecoveryServices/vaults/*",
              "Microsoft.RecoveryServices/vaults/backupFabrics/*",
              "Microsoft.RecoveryServices/vaults/backupPolicies/*",
              "Microsoft.RecoveryServices/vaults/backupProtectedItems/*",
              "Microsoft.RecoveryServices/vaults/backupProtectionIntent/*"
            ],
            "notActions": []
          }
        ],
        "assignableScopes": [
          "[subscription().id]"
        ]
      }
    },
    {
      "type": "Microsoft.Authorization/roleAssignments",
      "apiVersion": "2020-04-01-preview",
      "name": "[guid(resourceGroup().id, 'RecoveryVaultContributorAssignment')]",
      "properties": {
        "roleDefinitionId": "[resourceId('Microsoft.Authorization/roleDefinitions', guid(subscription().id, 'RecoveryVaultContributor'))]",
        "principalId": "<your_principal_id>",  // Replace this with the object ID of the user or service principal
        "scope": "[resourceGroup().id]"
      }
    }
  ]
}
